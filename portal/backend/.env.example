# ======================
# ITFY Portal API Configuration
# ======================

# Server
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
API_PREFIX=/api

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=itfy_portal
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_POOL_MAX=10
DB_POOL_MIN=2

# JWT Authentication
JWT_SECRET=your-super-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# SSO
SSO_SECRET=shared-with-incubator-and-moodle
SSO_EXPIRES_IN=5m

# Redis Caching (optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Moodle Integration
MOODLE_URL=https://lms.yourdomain.com
MOODLE_TOKEN=your_moodle_web_service_token

# Paystack Payment Gateway
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxx
PAYSTACK_CALLBACK_URL=http://localhost:3000/payment/callback

# Incubator/Jobs Platform Integration
INCUBATOR_URL=https://incubator.yourdomain.com
INCUBATOR_SECRET=shared_secret_key

# Email Configuration
EMAIL_PROVIDER=console
EMAIL_FROM_NAME=IT For Youth Ghana
EMAIL_FROM_ADDRESS=noreply@itforyouthghana.org

# SMTP Settings (when EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Security
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
