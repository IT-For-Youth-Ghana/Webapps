# ITFY Portal Frontend - Production Environment Variables

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_NODE_ENV=production

# Application URLs
NEXT_PUBLIC_APP_URL=https://portal.itforyouthghana.org
NEXT_PUBLIC_API_URL=https://api.itforyouthghana.org
NEXT_PUBLIC_MOODLE_URL=https://lms.itforyouthghana.org

# CDN Configuration (optional)
NEXT_PUBLIC_CDN_URL=https://cdn.itforyouthghana.org

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# JWT and Authentication
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://portal.itforyouthghana.org

# OAuth Providers (if used)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CSP_REPORT_URI=https://api.itforyouthghana.org/api/csp-report

# ==========================================
# EXTERNAL SERVICE INTEGRATIONS
# ==========================================

# Paystack Payment Gateway
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_your-paystack-public-key
PAYSTACK_SECRET_KEY=sk_live_your-paystack-secret-key

# Email Service (if using external provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics and Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Database (if using direct connection)
DATABASE_URL=postgresql://user:password@localhost:5432/itfy_portal

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false

# Development features (disable in production)
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false

# ==========================================
# DEPLOYMENT CONFIGURATION
# ==========================================

# Build Configuration
NEXT_OUTPUT_MODE=standalone
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00.000Z

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=itfy-portal-frontend

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Log Level
LOG_LEVEL=warn

# Health Check Configuration
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000
NEXT_PUBLIC_HEALTH_CHECK_TIMEOUT=5000

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================

# Social Media
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id
NEXT_PUBLIC_TWITTER_PIXEL_ID=your-twitter-pixel-id

# Chat/Support
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id
NEXT_PUBLIC_ZENDESK_KEY=your-zendesk-key

# ==========================================
# SECURITY CHECKLIST (PRODUCTION)
# ==========================================

# [ ] NODE_ENV set to 'production'
# [ ] NEXT_PUBLIC_NODE_ENV set to 'production'
# [ ] Strong JWT secrets (32+ characters)
# [ ] HTTPS URLs configured
# [ ] CSP enabled
# [ ] Analytics tracking ID set
# [ ] Error reporting configured
# [ ] Debug mode disabled
# [ ] Dev tools disabled
# [ ] Secure database credentials
# [ ] Redis password set (if used)
# [ ] SMTP credentials configured
# [ ] CDN URL configured (if used)
# [ ] PWA disabled for initial production
# [ ] Service worker disabled for initial production